<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/workout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="57dp"
                    android:maxWidth="200dp"

                    android:text="Workout Title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/number_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="?"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"

                    android:layout_below="@id/workout_title"
                    />

                <TextView
                    android:id="@+id/number_exercise_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/workout_title"

                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/number_exercise"
                    android:text=" Exercises"
                    android:textColor="@color/purple_500"
                    android:textSize="15dp" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/workout_imageview"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"

                    android:layout_alignParentEnd="true"

                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>