<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exercise_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                android:text="Exercise Title"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/exercise_difficulty_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"

                android:text="Difficulty : "
                android:textSize="17.5dp"
                android:textColor="@color/purple_500"

                android:layout_below="@id/exercise_title_item" />

            <TextView
                android:id="@+id/exercise_difficulty_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"

                android:textSize="15dp"
                android:text="Difficulty"

                android:layout_below="@id/exercise_title_item"
                android:layout_toRightOf="@+id/exercise_difficulty_title_item"/>

            <TextView
                android:id="@+id/exercise_muscle_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"

                android:text=" Muscle : "
                android:textColor="@color/purple_500"
                android:textSize="17.5dp"

                android:layout_below="@id/exercise_difficulty_item"/>

            <TextView
                android:id="@+id/exercise_muscle_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"

                android:textSize="15dp"
                android:text="Muscle"

                android:layout_below="@id/exercise_difficulty_item"
                android:layout_toRightOf="@+id/exercise_muscle_title_item"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"

                android:layout_alignParentEnd="true"

                android:background="@drawable/next_button" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>